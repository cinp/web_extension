{
  "manifest_version": 2,
  "name": "CInP Generic Client",
  "version": "0.9",

  "description": "CInP Generic API Enpoint Browser and Client",
  "icons": { "16":  "images/icon_16.png",
             "48":  "images/icon_48.png",
             "128": "images/icon_128.png"
           },

  "browser_action": {
    "default_icon": {
                      "16": "images/icon_16.png",
                      "24": "images/icon_24.png",
                      "32": "images/icon_32.png"
                    },
    "default_title": "CInP"
  },

  "background": {
    "scripts": [ "extension.js" ],
    "persistent": false
  },

  "permissions": [
    "tabs",
    "*://*/*"
  ]
}
